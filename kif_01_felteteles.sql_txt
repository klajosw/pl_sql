DECLARE
  v_Osztalyzat NUMBER(1);
  v_Minosites  VARCHAR2(10);
BEGIN
  ...
  V_Minosites :=
    CASE v_Osztalyzat
        WHEN 5 THEN 'Jeles'
        WHEN 4 THEN 'Jó'
        WHEN 3 THEN 'Közepes'
        WHEN 2 THEN 'Elégséges'
        WHEN 1 THEN 'Elégtelen'
        ELSE 'Nincs ilyen osztályzat'
    END;
  ...
END;
/
